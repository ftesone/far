operador_ar_unario = operador_ar_proyeccion | operador_ar_seleccion ;
operador_ar_seleccion = "σ" ;
operador_ar_proyeccion = "π" ;

string = '"', { char }, '"' ;
char = letra | letra_especial | sp | digito | simbolo ;

sp = " ";
open_c = "[" ;
close_c = "]" ;
