        | open_p , consulta , close_p
        | operador_ar_proyeccion, {sp}, lista_atributos, {sp}, consulta
        | operador_ar_seleccion, {sp}, expresion_bb, {sp}, consulta
        | consulta, {sp}, operador_ar_binario, {sp}, consulta

lista_atributos = open_c , {sp} , identificador , { coma , {sp} , identificador } , {sp} , close_c ;

